{
  "name": "vm.placeholder.polyfill",
  "version": "1.0.0",
  "description": "A polyfill for the HTML 5 placeholder attribute",
  "repository": "https://github.com/angular/angular-seed",
  "license": "MIT",
  "devDependencies": {
    "angular-mocks": "^1.4.8",
    "copyfiles": "0.2.1",
    "jasmine-core": "2.3.4",
    "karma": "~0.12",
    "karma-chrome-launcher": "^0.1.12",
    "karma-coverage": "^0.5.3",
    "karma-jasmine": "^0.3.5",
    "uglify-js": "2.6.1",
    "uglifyjs": "2.4.10"
  },
  "scripts": {
    "pretest": "npm install",
    "test": "karma start karma.conf.js",
    "test-single-run": "karma start karma.conf.js  --single-run",
    "copy": "copyfiles -u 1 src/*.js dist/",
    "uglify": "uglifyjs src/*.js --source-map dist/vmUtils.min.js.map -o dist/vmUtils.min.js",
    "build": "npm run copy && npm run uglify"
  },
  "dependencies": {
    "angular": "^1.4.8"
  }
}
